@model Hethongquanlylab.Models.Login.ChangePasswordInput
@{
    ViewData["Title"] = "Đổi mặt khẩu";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/img/logo_icon.png" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">

    <title>Đổi mật khẩu</title>
</head>
<body>
    <div id="wrapper">
        <form asp-controller="Login" asp-action="ChangePassword" method="post" id="form-login">
            <h1 class="form-heading">Đổi mật khẩu</h1>

            <div class="form-group">
                <i class="fas fa-key"></i>
                <input id="Input1" name="OldPassword" type="password" class="form-input" placeholder="Mật khẩu cũ" value="@Model.OldPassword">
                <div id="eye" onclick="TogglePassword(1)">
                    <i id="eye-icon1" class="fa fa-eye"></i>
                </div>
            </div>

            <div class="form-group">
                <i class="fas fa-key"></i>
                <input id="Input2" name="NewPassword" type="password" class="form-input" placeholder="Mật khẩu mới" value="@Model.NewPassword">
                <div id="eye" onclick="TogglePassword(2)">
                    <i id="eye-icon2" class="fa fa-eye"></i>
                </div>
            </div>

            <div class="form-group">
                <i class="fas fa-key"></i>
                <input id="Input3" name="ReNewPassword" type="password" class="form-input" placeholder="Xác nhận mật khẩu mới" value="@Model.ReNewPassword">
                <div id="eye" onclick="TogglePassword(3)">
                    <i id="eye-icon3" class="fa fa-eye"></i>
                </div>
            </div>

            <div style="color:#f00">@Html.Raw(TempData["msg"])</div>

            <input asp-action="ChangePassword" class="form-submit" type="submit" value="Đổi mật khẩu" style="margin-top: 15px;">
            <a href="javascript:void(0);" onclick="history.go(-1);" class="form-submit" style="margin-top: 15px;">Trở Về</a>
        </form>

    </div>

</body>
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script>
    function TogglePassword(num) {
        var x = document.getElementById("Input" + num.toString());
        if (x.type === "password") {
            x.type = "text";
            document.getElementById("eye-icon" + num.toString()).className = "fa fa-eye-slash ";
        } else {
            x.type = "password";
            document.getElementById("eye-icon" + num.toString()).className = "fa fa-eye";
        }
    }
</script>
</html>

