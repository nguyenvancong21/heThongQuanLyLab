@model Procedure

@{
    @section Buttons{
        <a class="header-item"></a>
        <a asp-action="Index" class="header-item">Trang chủ</a>
    }

    @section Login{
        <li class="user-info-item">
            <a asp-controller="Login" asp-action="ChangetoChangePassword">Đổi mật khẩu</a>
        </li>
        <li class="user-info-item">
            <a asp-controller="Home" asp-action="Index">Đăng xuất</a>
        </li>
    }
}
<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/nhanSu&DuAn.css">
</head>
<body>
    <div class="wrap-back" style="display:flex;">
        <a asp-action="Index"><h2 class="backMainPage"> Trang Chủ</h2></a>
        <p>/</p>
        <a asp-action="Procedure"><h2 style="padding-left: 10px;" class="backMainPage"> Quy trình</h2></a>
        <p>/</p>
        <a asp-action="ProcedureDetail"><h2 style="padding-left: 10px;" class="backMainPage"> Chi tiết quy trình</h2></a>
    </div>
    <div style="width: 1030px;margin: auto;text-align: right;">
        <button class="btn-excel">Xuất file PDF</button>
    </div>
    <div style="display:flex;
            justify-content: center;
            font-size: 30px;
            font-weight: 600;
            margin-bottom: 30px;" id="wrap-DuAn">
        <div id="name-DuAn">@Model.Name</div>
        <input style="display:none;" id="name-input" type="text" placeholder="Tên Dự Án">
        <i style="    margin-left: 20px;" class="fa-regular fa-pen-to-square"></i>
    </div>


    <div style="display: flex ;justify-content: space-between;margin: 20px 160px;" class="date-DuAn">
        <div style="display:flex" class="start">
            <p>Ngày Bắt Đầu: </p>
            <div style="display:flex; margin: 16px 10px; justify-content: center;" id="wrap-date">
                <div id="text-date">@Model.Senddate </div>
                <input style="display:none;" id="input-date" type="text" placeholder="dd/mm/yy">
                <i style="    margin-left: 20px;" class="fa-regular fa-pen-to-square"></i>
            </div>
        </div>

        <div style="display:flex;" class="trangThai">
            <p style="margin-right: 10px;">Trạng Thái: </p>
            <p>@Model.Status</p>
        </div>

    </div>
    <div style="width: 1030px;margin: auto;" id="wrap-noiDung">
        <p>Nội Dung <i style="margin-left: 20px;" class="fa-regular fa-pen-to-square"></i></p>
        <div style="display: block;
                    height: 300px;
                    background-color: #f5f5f5;
                    border: 2px solid #ccc;
                    line-height:34px;"
             id="text-noiDung">
            Nội dung chi tiết dự án
        </div>
        <textarea style="display:none; line-height:34px;width:100%; height: 300px;" name="" id="input-noiDung" cols="30" rows="10"></textarea>
    </div>

    <div style="display: flex; width: 1030px; margin: auto;" id="wrap-link">
        <p style="margin-right: 12px;">Link Quy Trình: </p>
        <div style="margin: auto 0; " id="text-link"> @Model.Link</div>
        <input style="display:none; height: 20px; margin: auto 0;" type="text" id="input-link">
        <i style="margin-left: 8px;margin-top: 10px;" class="fa-regular fa-pen-to-square"></i>
    </div>


    <div class="" style="margin-left: 886px;">
        <button class="add-nhanSu btn-confirm">
            <i class="fa-solid fa-plus"></i>
            Lưu
        </button>
        <button style="margin-top:30px; margin-left: 42px;" class="add-nhanSu btn-confirm">
            <i class="fa-solid fa-plus"></i>
            Lưu & Gửi Duyệt
        </button>

    </div>

    <div style="background-color:#888" class="dialog-confirm" title="Xác Nhận">
        <p>Bạn chắc chắn muốn thay đổi ?</p>
        <div style="display: flex;margin-top: 33px;">
            <button>Đồng Ý</button>
            <button class="btn-close" style="padding: 14px 52px;">Hủy</button>
        </div>
    </div>

    <script>
        $("#wrap-DuAn").click(function () {
            document.getElementById("name-DuAn").style.display = 'none';
            document.getElementById("name-input").style.display = 'block';
        })
        $('#name-input').change(function () {
            var textName = this.value;
            console.log(textName);
            if (textName) {
                document.getElementById('name-DuAn').innerText = `${textName} `;
            }
        })
        $('#name-input').focusout(function () {
            document.getElementById("name-DuAn").style.display = 'block';
            document.getElementById("name-input").style.display = 'none';
        })


        $("#wrap-date").click(function () {
            document.getElementById("text-date").style.display = 'none';
            document.getElementById("input-date").style.display = 'block';

        })
        $('#input-date').change(function () {
            var textName = this.value;
            console.log(textName);
            if (textName) {
                document.getElementById('text-date').innerText = `${textName} `;
            }
        })
        $('#input-date').focusout(function () {
            document.getElementById("text-date").style.display = 'block';
            document.getElementById("input-date").style.display = 'none';
        })

        $("#wrap-noiDung").click(function () {
            document.getElementById("text-noiDung").style.display = 'none';
            document.getElementById("input-noiDung").style.display = 'block';
        })
        $('#input-noiDung').change(function () {
            var textName = this.value;
            if (textName) {
                document.getElementById('text-noiDung').innerText = `${textName} `;
            }
        })
        $('#input-noiDung').focusout(function () {
            document.getElementById("text-noiDung").style.display = 'block';
            document.getElementById("input-noiDung").style.display = 'none';
        })

        $("#wrap-link").click(function () {
            document.getElementById("text-link").style.display = 'none';
            document.getElementById("input-link").style.display = 'block';
        })
        $('#input-link').change(function () {
            var textName = this.value;
            if (textName) {
                document.getElementById('text-link').innerText = `${textName} `;
            }
        })
        $('#input-link').focusout(function () {
            document.getElementById("text-link").style.display = 'block';
            document.getElementById("input-link").style.display = 'none';
        })

    </script>
</body>